{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "swift",
			"args": [
				"build",
				"--build-tests",
				"-Xswiftc",
				"-diagnostic-style=llvm"
			],
			"cwd": "${workspaceFolder}",
			"disableTaskQueue": true,
			"showBuildStatus": "swiftStatus",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"label": "swift: Build All",
			"detail": "swift build --build-tests -Xswiftc -diagnostic-style=llvm"
		}
	]
}
